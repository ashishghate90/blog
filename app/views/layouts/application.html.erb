<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tailwind", media: "all" %>
    <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100">
  <nav class="p-4 bg-blue-600 text-white">
    <div class="container mx-auto flex justify-between">
      <%= link_to "BlogApp", root_path, class: "text-lg font-bold" %>
      <div>
        <% if user_signed_in? %>
          <%= current_user.email %> |
          <%= link_to "New Post", new_post_path, class: "mr-4" %> |
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "mr-4" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "mr-4" %>
          <%= link_to "Sign Up", new_user_registration_path %>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="container mx-auto mt-8">
    <%= yield %>
  </div>
</body>
</html>
