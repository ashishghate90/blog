<h1 class="text-2xl font-bold">Edit Post</h1>

<div class="bg-white p-6 rounded shadow-md mt-4">
  <%= form_with model: @post, local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, class: "block font-bold" %>
      <%= f.text_field :title, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.label :body, class: "block font-bold" %>
      <%= f.text_area :body, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.submit "Update Post", class: "bg-green-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>

<%= link_to "Back", posts_path, class: "mt-4 inline-block text-blue-600" %>
